<h1>Employees</h1>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            <th>Employee ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Position</th>
            <th>Pay Rate</th>
            <th>Hire Date</th>
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the attributes}}
        {{#each employees}}
        <tr>
            <td>{{this.employeeID}}</td>
            <td>{{this.firstName}}</td>
            <td>{{this.lastName}}</td>
            <td>{{this.phoneNumber}}</td>
            <td>{{this.position}}</td>
            <td>{{this.payRate}}</td>
            <td>{{this.hireDate}}</td>

        </tr>
        {{/each}}
    </tbody>
</table>



